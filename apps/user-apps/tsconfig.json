{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./*"],
      "@repo/db": ["../../packages/db/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next-auth.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
}
